.route {
  background-color: #fff;
  height: 140rpx;
  padding-top: 40rpx;
}

.easy-location-throughout-container {
  display: flex;
  align-items: center;
  text-align: center;
}

.easy-location-throughout-text {
  flex: 1;
  font-size: 40rpx;
  font-weight: 800;
  color: #1e90ff;
}

.easy-route-img {
  height: 100rpx;
  width: 100rpx;
}

.company-choose-head {
  display: flex;
}

.company-choose-head-view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 110rpx;
}

.company-choose-title {
  font-size: 40rpx;
  color: #000;
}

.company-choose-img {
  height: 40rpx;
  width: 40rpx;
}


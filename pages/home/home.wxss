@import "../template/icon-list/icon-list-template.wxss";
@import "../template/location-throughout/location-throughout-template.wxss";

.head-container {
  background-color: #1e90ff;
  display: flex;
  height: 80rpx;
  justify-content: space-between;
}

.location-container {
  display: flex;
  align-items: center;
}

.location-img {
  padding-left: 20rpx;
  width: 45rpx;
  height: 45rpx;
}

.location-text {
  font-size: 40rpx;
  padding-left: 20rpx;
  color: #fff;
}

.introduce-container {
  display: flex;
  align-items: flex-end;
  padding-bottom: 10rpx;
}

.introduce-img {
  width: 35rpx;
  height: 35rpx;
}

.introduce-text {
  font-size: 30rpx;
  color: #fff;
}

swiper {
  width: 100%;
  height: 350rpx;
}

swiper image {
  width: 100%;
  height: 350rpx;
}

.icons-container {
  padding: 10rpx;
}

.query {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  height: 350rpx;
  padding-top: 50rpx;
  background-color: #fff;
}

.query-btn {
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 35rpx;
  height: 70rpx;
  width: 600rpx;
  color: #fff;
  border-radius: 50px;
  background-color: #1e90ff;
  margin-bottom: 10rpx;
}

.frequency {
  margin-bottom: 40rpx;
}

.frequency text {
  font-size: 25rpx;
  color: #8E8E8E;
}

.route {
  display: flex;
  justify-content: space-around;
}

.route-img {
  padding: 0 35rpx;
  height: 100rpx;
  width: 100rpx;
}

.footer-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  font-size: 20rpx;
  color: #8e8e8e;
}

.footer-right {
  padding-right: 20rpx;
}
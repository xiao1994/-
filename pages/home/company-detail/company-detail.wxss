.company-detail-container {
  padding-bottom: 120rpx;
}

swiper {
  width: 100%;
  height: 450rpx;
}

swiper image {
  width: 100%;
  height: 450rpx;
}

.company-detail-small-bar {
  display: flex;
  justify-content: space-between;
  background-color: #515151;
}

.company_detail_tags {
  display: flex;
  align-items: center;
}

.company-detail-tag {
  margin-left: 20rpx;
  height: 30rpx;
  width: 30rpx;
}

.company-detail-small-bar-right {
  display: flex;
  align-items: center;
}

.browse {
  padding-right: 30rpx;
  font-size: 24rpx;
  color: #fff;
}

.laud {
  padding-right: 10rpx;
  height: 30rpx;
  width: 30rpx;
}

.laud-man {
  padding-right: 60rpx;
  font-size: 24rpx;
  color: #fff;
}

.company-detail-big-bar {
  background-color: #fff;
  padding: 10rpx 40rpx;
  margin-bottom: 10rpx;
}

.company-detail-big-bar-text {
  font-size: 35rpx;
  font-weight: 600;
  color: #ea9518;
}

.company-detail-choose {
  display: flex;
  background-color: #fff;
  align-items: center;
}

.company-detail-choose-text {
  flex: 1;
  padding: 20rpx 10rpx;
  text-align: center;
  color: #1e90ff;
}

.vertical-line {
  height: 70rpx;
  width: 10rpx;
}

.company-detail-choose-summary {
  margin: 30rpx;
}

.company-detail-choose-summary-text {
  text-indent: 2em;
  line-height: 1.8em;
  font-family: monospace;
  font-size: 33rpx;
  color: #666;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 9;
  margin-bottom: 50rpx;
}

.company-detail-choose-summary-img {
  height: 400rpx;
  width: 690rpx;
}

.site-container {
  margin-top: 20rpx;
  padding: 20rpx 30rpx 0;
  background-color: #fff;
}

.site-top {
  display: flex;
  margin-bottom: 15rpx;
}

.site-name {
  flex: 1;
  font-size: 35rpx;
  font-weight: 600;
  color: #1e90ff;
}

.site-laud-man {
  font-size: 24rpx;
}

.site-location {
  font-size: 29rpx;
}

.site-choose-container {
  margin-top: 15rpx;
  display: flex;
  border-top: 2px solid #f2f2f2;
}

.site-choose {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
}

.site-choose-img {
  height: 35rpx;
  width: 35rpx;
}

.site-choose-text {
  margin-left: 10rpx;
}

.album {
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
  justify-content: center;
}

.album-image {
  padding: 20rpx 0;
  height: 450rpx;
  width: 700rpx;
}

.stars-container {
  display: flex;
  flex-direction: column;
}

.stars {
  display: flex;
  justify-content: center;
  height: 170rpx;
  margin-top: 50rpx;
}

.stars image {
  padding: 15rpx;
  height: 100rpx;
  width: 100rpx;
}

.star-score {
  font-size: 100rpx;
  text-align: center;
  color: #1f3463;
}

.company-detail-footer {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  align-items: center;
  height: 120rpx;
  background-color: #fff;
}

.company-detail-input-container {
  flex: 6;
  background-color: f2f2f2;
}

.input-container {
  display: flex;
  align-items: center;
  background-color: #f2f2f2;
  height: 80rpx;
  margin: 0 30rpx;
  border-radius: 10px;
}

.input-img {
  padding-left: 10px;
  height: 50rpx;
  width: 50rpx;
}

.input-line {
  height: 60rpx;
  width: 30rpx;
}

.input-content {
  flex: 1;
  font-size: 30rpx;
}

.company-detail-footer-choose {
  flex: 4;
}

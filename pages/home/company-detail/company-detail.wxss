swiper {
  width: 100%;
  height: 450rpx;
}

swiper image {
  width: 100%;
  height: 450rpx;
}

.company-detail-small-bar {
  display: flex;
  justify-content: space-between;
  background-color: #515151;
}

.company_detail_tags {
  display: flex;
  align-items: center;
}

.company-detail-tag {
  margin-left: 20rpx;
  height: 30rpx;
  width: 30rpx;
}

.company-detail-small-bar-right {
  display: flex;
  align-items: center;
}

.browse {
  padding-right: 30rpx;
  font-size: 23rpx;
  color: #fff;
}

.laud {
  padding-right: 10rpx;
  height: 30rpx;
  width: 30rpx;
}

.laud-man {
  padding-right: 60rpx;
  font-size: 23rpx;
  color: #fff;
}

.company-detail-big-bar {
  background-color: #fff;
  padding: 10rpx 40rpx;
  margin-bottom: 10rpx;
}

.company-detail-big-bar-text {
  font-size: 35rpx;
  font-weight: 600;
  color: #ea9518;
}

.company-detail-choose {
  display: flex;
  background-color: #fff;
  align-items: center;
}

.company-detail-choose-text {
  flex: 1;
  padding: 20rpx 10rpx;
  text-align: center;
  color: #1e90ff;
}

.company-detail-choose-img {
  height: 70rpx;
  width: 10rpx;
}

.company-detail-choose-summary {
  margin: 30rpx;
}

.company-detail-choose-summary-text {
  text-indent: 2em;
  line-height: 1.8em;
  font-family: monospace;
  font-size: 33rpx;
  color: #666;
  -webkit-line-clamp: 5; 
}
